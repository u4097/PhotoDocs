<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout2">

    <TextView
            android:id="@+id/title_tv"
            android:text="@string/fmt_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="33dp"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
    />
    <!--Passport-->
    <androidx.cardview.widget.CardView
            android:id="@+id/passport_cv"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginTop="106dp"
            android:layout_marginStart="14dp"
            android:drawableTop="@drawable/ic_passport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/cardview_light_background"
    >
        <ImageView
                android:id="@+id/passport_iv"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_passport"
        />
        <TextView
               android:text="Паспорт"
               android:layout_marginTop="130dp"
               android:layout_gravity="center_horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="@style/TextAppearance.PhotoDocs.Content"
        />
    </androidx.cardview.widget.CardView>

    <!--Viza-->
    <androidx.cardview.widget.CardView
            android:id="@+id/viza_cv"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="14dp"
            android:drawableTop="@drawable/ic_passport"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passport_cv"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/cardview_light_background"
    >
        <ImageView
                android:id="@+id/viza_iv"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_visa"
        />
        <TextView
                android:text="Виза"
                android:layout_marginTop="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.PhotoDocs.Content"
        />
    </androidx.cardview.widget.CardView>

    <!--Passport-->
    <androidx.cardview.widget.CardView
            android:id="@+id/passport2_cv"
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="14dp"
            android:drawableTop="@drawable/ic_visa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viza_cv"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/cardview_light_background"
    >
        <ImageView
                android:id="@+id/passpor2_iv"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_passport"
        />
        <TextView
                android:text="Паспорт"
                android:layout_marginTop="130dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.PhotoDocs.Content"
        />
    </androidx.cardview.widget.CardView>

    <!--<include layout="@layout/games_list"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>