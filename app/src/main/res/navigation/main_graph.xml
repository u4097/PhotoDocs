<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_graph"
            app:startDestination="@id/splash_fragment"
>

    <!--Splash-->
    <fragment android:id="@+id/splash_fragment"
              android:name="com.oleg.photodocs.presentation.splash.SplashFragment"
              android:label="SplashFragment"
              tools:layout="@layout/fmt_splash"
    >
        <action android:id="@+id/action_to_select_fragment"
                app:destination="@id/select_fragment"/>
    </fragment>

    <!--Select-->
    <fragment android:id="@+id/select_fragment"
              tools:layout="@layout/fmt_select"
              android:name="com.oleg.photodocs.presentation.select.SelectFragment"
              android:label="SelectFragment">
        <action android:id="@+id/action_to_camera_fragment"
                app:destination="@id/camera_fragment"/>
    </fragment>

    <!--Camera-->
    <fragment android:id="@+id/camera_fragment"
              tools:layout="@layout/fmt_camera"
              android:name="com.oleg.photodocs.presentation.camera.CameraFragment"
              android:label="CameraFragment">

        <argument android:name="documentName"
                  app:argType="string"
                  android:defaultValue=" "
        />
    </fragment>
</navigation>