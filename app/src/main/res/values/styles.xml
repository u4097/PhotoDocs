<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?themePrimary</item>
        <item name="colorPrimaryDark">?themePrimaryDark</item>
        <item name="colorSecondary">?themeSecondary</item>
    </style>

    <style name="AppTheme.Launcher" parent="BaseTheme.PhotoDocs">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>


    <!--Custom  theme-->
    <style name="BaseTheme.PhotoDocs">
        <item name="themePrimary">@color/colorPrimary</item>
        <item name="themePrimaryDark">@color/colorPrimaryDark</item>
        <item name="themeSecondary">@color/colorAccent</item>

        <!--Base colors-->
        <item name="themeContentTextColor">@color/black</item>
        <item name="themeContentBackground">@color/white</item>
        <item name="themeContentTextColoOnPrimary">@color/white</item>

        <!--Material dialogs-->
        <!--<item name="md_color_title">?themePrimaryDark</item>-->
